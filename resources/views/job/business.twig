{% extends 'job.base' %}

{% block title %}Nasza oferta :: Praca {{ parent() }}{% endblock %}

{% set submit_url = "'" ~ route('job.submit') ~ "?default_plan=' + default_plan.id" %}

{% block container %}
  <script>
    var plans = {{ plans|raw }};
    var plan = {{ default_plan|raw }};
  </script>
  <div id="js-business" class="row">
    <div class="col-xl-2">
    </div>
    <div class="col-xl-8">
      <h1 class="text-center mt-4 mb-4">
        Dodaj ofertę pracy w kilku <br>
        prostych krokach
      </h1>

      <vue-pricing :plans="plans" v-model="plan.id"></vue-pricing>

      <div class="text-center">
        <span class="edge">
          <a :href="submitUrl" class="btn btn-lg btn-primary jobboard-add-offer-landing-1">Dodaj ofertę pracy</a>
        </span>

        <p class="mt-3">
          Masz pytania? Skontaktuj się z nami pod adresem
          <a href="mailto:{{ config('mail.from.address') }}" class="neon-color-link">
            {{ config('mail.from.address') }}
          </a>.
        </p>
      </div>
    </div>
  </div>
{% endblock %}
