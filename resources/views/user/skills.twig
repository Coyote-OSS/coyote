{% extends 'user.base' %}
{% block title %}Umiejętności {{ parent() }}{% endblock %}

{% block content %}
  <h2>Umiejętności</h2>

  <div v-cloak id="js-skills" class="card card-default">
    <div class="card-body">
      <div class="form-group row pb-2">
        <div class="col">
          <vue-tags-inline
            @change="addSkill"
            placeholder="Np. java, c#"
            data-popover='{"message": "Umiejętności będą widoczne na Twoim profilu.", "placement": "top-start", "offset": "0,10px"}'
          >
          </vue-tags-inline>
        </div>
      </div>

      <ul class="tag-clouds tag-clouds-skills">
        <template v-for="skill in skills">
          <vue-tag-skill :tag.sync="skill" :tooltips="['podstawy', 'średnio zaawansowany', 'zaawansowany']" @delete="deleteSkill(skill.id)"></vue-tag-skill>
        </template>
      </ul>
    </div>

    <vue-notifications position="bottom right" />
  </div>

  <script>
    var skills = {{ skills|json_encode|raw }};
    var rateLabels = {{ rate_labels|json_encode|raw }};
  </script>
{% endblock %}

