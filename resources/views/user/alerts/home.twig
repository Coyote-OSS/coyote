{% extends 'user.base' %}
{% block title %}Powiadomienia {{ parent() }}{% endblock %}

{% block content %}
    <h2>Powiadomienia</h2>

    <div id="box-alerts" class="panel panel-default">
        <div class="panel-body">
            {% set head_date = '' %}

            <nav class="text-center">
                {{ pagination.render()|raw }}
            </nav>

            {% for alert in pagination %}
                {% if head_date != alert.created_at|date('d F Y') %}
                    <h2>{{ alert.created_at|date('d F Y') }}</h2>
                    {% set head_date = alert.created_at|date('d F Y') %}
                {% endif %}

                {% set url = route('user.alerts.url', [alert.guid]) ~ '#' ~ alert.url %}

                <div class="media {{ (alert.read_at and alert.read_at|timestamp < session_created_at) or alert.is_marked ? '' : 'unread' }}">
                    <div class="media-left">
                        <a href="{{ route('profile', [alert.user.user_id]) }}">
                            <img class="media-object" src="{{ user_photo(alert.user.photo) }}" style="width: 49px; height: 49px;" alt="{{ alert.user.name }}" title="{{ alert.user.name }}">
                        </a>
                    </div>
                    <div class="media-body">
                        <header>
                            <h4 class="pull-left"><a href="{{ url }}">{{ alert.headline }}</a></h4>
                            <small class="pull-right">{{ alert.created_at|format_date }}</small>
                        </header>

                        <h3><a href="{{ url }}">{{ alert.subject|raw }}</a></h3>
                        <p class="excerpt"><a href="{{ url }}">{{ alert.excerpt|raw }}</a></p>
                    </div>
                </div>
            {% else %}
                <p class="alert alert-info">Brak powiadomieÅ„.</p>
            {% endfor %}

            <nav class="text-center">
                {{ pagination.render()|raw }}
            </nav>
        </div>
    </div>
{% endblock %}
