{% extends 'forms.themes.inline.row' %}

{% block label %}
{% endblock %}

{% block wrap %}
  <div class="custom-control custom-checkbox">
    {% if not ('[]' in name) %}
      {{ form_hidden(name, unchecked_value) }}
    {% endif %}
    <label for="{{ attr.id }}" class="custom-control-label">
      {{ include(widget_path) }}
      <span class="label-text">
        {{ label }}
      </span>
    </label>
  </div>
{% endblock %}
