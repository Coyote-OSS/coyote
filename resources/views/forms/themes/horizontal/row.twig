{% import 'legacyComponents.forms' as forms %}
{% set form_group_class = form_group_class|default('col-md-6') %}

<div {{ forms.attr(row_attr|merge({class: (row_attr.class|default('') ~ ' form-group row')|trim})) }}>
    {% block label %}{{ include(theme ~ '.label') }}{% endblock %}

    {% block wrap %}
        <div class="{{ form_group_class }}">
            {% block widget %}{{ include(widget_path) }}{% endblock widget %}

            {% block error %}{{ include(theme ~ '.error') }}{% endblock %}
        </div>
    {% endblock %}
</div>
