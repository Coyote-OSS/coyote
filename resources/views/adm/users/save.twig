{% extends 'adm.base' %}
{% block title %}Użytkownicy :: {{ user.name }} :: {{ parent() }}{% endblock %}

{% block container %}
    {{ form_start(form) }}

    <ul class="nav nav-card" role="tablist">
        <li role="presentation" class="active"><a href="#settings" role="tab" data-toggle="tab">Ustawienia</a></li>
        <li role="presentation"><a href="#skills" role="tab" data-toggle="tab">Umiejętności</a></li>
        <li role="presentation"><a href="#groups" role="tab" data-toggle="tab">Grupy użytkownika</a></li>
    </ul>


    <div class="card card-default tab-content">
        <div id="settings" class="card-body tab-pane active">
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.group_id) }}
            {{ form_row(form.is_confirm) }}
            {{ form_row(form.is_active) }}
            {{ form_row(form.is_sponsor) }}
            {{ form_row(form.date_format) }}
            {{ form_row(form.website) }}
            {{ form_row(form.github) }}
            {{ form_row(form.allow_smilies) }}
            {{ form_row(form.allow_subscribe) }}
            {{ form_row(form.allow_sticky_header) }}
            {{ form_row(form.delete_photo) }}
            {{ form_row(form.firm) }}
            {{ form_row(form.position) }}
            {{ form_row(form.bio) }}
            {{ form_row(form.birthyear) }}
            {{ form_row(form.location) }}
            {{ form_row(form.allow_count) }}
            {{ form_row(form.allow_sig) }}
            {{ form_row(form.sig) }}
            {{ form_row(form.submit) }}
        </div>

        <div id="skills" class="card-body tab-pane">
            {{ form_row(form.skills) }}
            {{ form_row(form.submit) }}
        </div>

        <div id="groups" class="card-body tab-pane">
            {{ form_row(form.groups) }}
            {{ form_row(form.submit) }}
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
