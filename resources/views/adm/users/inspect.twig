{% extends 'adm.base' %}
{% block title %}Użytkownick :: {{ user.name }} :: {{ parent() }}{% endblock %}

{% block container %}
  <div class="card">
    <div class="card-header">
      Użytkownik {{ navigation.mention }}
    </div>
    <div class="card-body">
      <p>Fingerprinty użytkowników są wyszukane w okresie ostatnich <b>dwóch lat</b>.</p>
      <div class="card">
        <div class="card-header">
          {{ icon('adminUserFindFingerprints') }}
          Fingerprinty ({{ inspection.fingerprints|length }})
        </div>
        <ul class="list-group list-group-flush">
          {% for fingerprint in inspection.fingerprints %}
            <li class="list-group-item">
              <div class="d-flex">
                <code>{{ fingerprint.fingerprint }}</code>
                <span class="ms-auto">
                  użył
                  <b>{{ fingerprint.timesUsed }}</b> raz(y),
                  ostatnio <b>{{ fingerprint.lastUsed }}</b>
                </span>
              </div>
            </li>
          {% else %}
            <li class="list-group-item text-center">
              Nie znaleziono fingerprintów użytkownika.
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <a class="btn btn-secondary" href="{{ navigation.back }}">
    Powrót
  </a>
{% endblock %}
