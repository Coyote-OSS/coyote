{% extends 'adm.base' %}
{% block title %}Eksperymenty{{ parent() }}{% endblock %}

{% block container %}
  <div class="card card-default">
    <div class="card-header">Eksperyment</div>
    <div class="card-body">
      <form action="{{ experimentCreateUrl }}" method="POST">
        <input type="hidden" name="{{ experimentCsrfField }}" value="{{ experimentCsrfToken }}">
        <div class="row">
          <label class="col-md-4 col-form-label text-end">
            Tytuł
          </label>
          <div class="col-md-6">
            <input name="title" class="form-control" placeholder="Nowy eksperyment"/>
          </div>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <button class="btn btn-primary">
            Zapisz
          </button>
        </div>
      </form>
    </div>
  </div>
  <div class="d-flex justify-content-end">
    <a class="btn btn-secondary" href="{{ experimentsBackUrl }}">
      Powrót
    </a>
  </div>
{% endblock %}
