{% extends 'adm.base' %}
{% block title %}Edycja banu {{ parent() }}{% endblock %}

{% block card %}
  {{ form(form) }}
{% endblock %}

{% block body %}
  {{ parent() }}

  <script type="text/javascript">
    $(function () {
      let previous = $('#expire-at').val();
      $(':checkbox[name="lifetime"]')
        .change(function () {
          $('#expire-at').attr('disabled', $(this).is(':checked'));
          if ($(this).is(':checked')) {
            previous = $('#expire-at').val();
            $('#expire-at').val('');
          } else {
            $('#expire-at').val(previous);
          }
        })
        .trigger('change');
    });
  </script>
{% endblock %}
