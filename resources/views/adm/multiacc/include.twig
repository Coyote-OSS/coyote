{% extends 'adm.base' %}
{% block title %}Kartoteka {{ parent() }}{% endblock %}

{% import "adm.multiacc.components.twig" as components %}

{% block cardHeader %}
  <div class="card-header d-flex justify-content-between align-items-center">
    <span>Multikonto w kartotece <b>#{{ multiacc.id }}</b></span>
    <a class="btn btn-sm btn-secondary" href="{{ backHref }}">
      Wróć
    </a>
  </div>
{% endblock %}

{% block card %}
  <p>Chcesz dodać konto użytkownika do istniejącej kartoteki.</p>
  <form method="POST" action="{{ postUrl }}">
    <input type="hidden" name="_token" value="{{ csrf_token() }}">
    {{ components.formField('Nazwa użytkownika', 'e.g. spidey, hyperion46', 'username', 'username') }}
    <div class="alert alert-info">
      <p>
        Potwierdzam, że jestem całkowicie pewny/a,
        <b>że to konto należy do osoby której dotyczy kartoteka</b>.
      </p>
    </div>
    <a class="btn btn-secondary" href="{{ backHref }}">Anuluj</a>
    <button type="submit" class="btn btn-primary">Zapisz</button>
  </form>
{% endblock %}
