{% extends 'adm.base' %}
{% block title %}Strona główna {{ parent() }}{% endblock %}

{% block container %}
  <div class="card">
    <div class="card-header">Status systemu</div>
    <ul class="list-group list-group-flush">
      {% for item in checklist %}
        <li class="list-group-item">
          {% if item.value %}
            {{ icon('adminTickMark') }}
          {% else %}
            {{ icon('adminCrossMark') }}
          {% endif %}
          <span>{{ item.label }}</span>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="card">
    <div class="card-header">Analiza kohortowa</div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
          <span>
            {{ icon('adminTickMark') }}
            <span>Dane cohortowe z: <code>{{ cohortDownloadDate }}</code></span>
          </span>
          <a href="{{ cohortDownloadUrl }}" class="btn btn-sm btn-secondary" target="_blank">
            Pobierz
          </a>
        </div>
      </li>
    </ul>
  </div>
  <ul class="nav nav-pills mb-3 justify-content-end">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#pills-weeks" type="button">ostatnie 30 tygodni</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-months" type="button">ostatnie 30 miesięcy</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-years" type="button">ostatnie 30 lat</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane show active" id="pills-weeks">
      {{ registrationsChartWeeks }}
    </div>
    <div class="tab-pane" id="pills-months">
      {{ registrationsChartMonths }}
    </div>
    <div class="tab-pane" id="pills-years">
      {{ registrationsChartYears }}
    </div>
  </div>

  <ul class="nav nav-pills mb-3 justify-content-end">
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-days-leave" type="button">ostatnie 30 dni</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#pills-weeks-leave" type="button">ostatnie 30 tygodni</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-months-leave" type="button">ostatnie 30 miesięcy</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-years-leave" type="button">ostatnie 30 lat</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane" id="pills-days-leave">
      {{ postsCreatedChartDays }}
    </div>
    <div class="tab-pane show active" id="pills-weeks-leave">
      {{ postsCreatedChartWeeks }}
    </div>
    <div class="tab-pane" id="pills-months-leave">
      {{ postsCreatedChartMonths }}
    </div>
    <div class="tab-pane" id="pills-years-leave">
      {{ postsCreatedChartYears }}
    </div>
  </div>

  <ul class="nav nav-pills mb-3 justify-content-end">
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-days-jobs" type="button">ostatnie 30 dni</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#pills-weeks-jobs" type="button">ostatnie 30 tygodni</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-months-jobs" type="button">ostatnie 30 miesięcy</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-years-jobs" type="button">ostatnie 30 lat</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane" id="pills-days-jobs">
      {{ jobsCreatedChartDays }}
    </div>
    <div class="tab-pane show active" id="pills-weeks-jobs">
      {{ jobsCreatedChartWeeks }}
    </div>
    <div class="tab-pane" id="pills-months-jobs">
      {{ jobsCreatedChartMonths }}
    </div>
    <div class="tab-pane" id="pills-years-jobs">
      {{ jobsCreatedChartYears }}
    </div>
  </div>
{% endblock %}
