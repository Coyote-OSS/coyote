<section id="whats-new" class="box mt-4">
  <h4>
    <i class="fas fa-newspaper fa-fw"></i>
    <a href="{{ href }}" title="Zobacz zmiany w serwisie 4programmers.net">
      Nowości od #4programmers.net
    </a>
  </h4>

  <div class="card">
    <div class="card-body">
      <ul class="list-unstyled mb-0">
        {% for microblog in microblogs %}
          <li class="pt-1 pb-2">
            <a class="d-block text-truncate" href="{{ microblog.href }}">
              {{ microblog.summary }}
            </a>
            <div style="font-size: 11px">
              — {{ microblog.date }}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
