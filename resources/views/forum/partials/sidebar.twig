<aside id="sidebar">
  {% block side_menu %}
  {% endblock %}

  {{ render_block('job_ads') }}

  <div id="js-tags" class="box">
    <h4 class="border-bottom">
      <i class="fas fa-tag fa-fw"></i> Moje tagi

      <a @click="isEditing = !isEditing" href="javascript:" class="btn btn-secondary btn-sm float-right" style="margin-top: -4px">
        <i class="fas fa-cog"></i>
      </a>
    </h4>

    <form v-if="isEditing">
      <div class="row mt-3">
        <div class="col-9">
          <input :value="inlineTags" @keyup.esc="isEditing = false" @keyup.enter="saveTags" ref="input" class="form-control form-control-sm">
        </div>
        <div class="col-2">
          <vue-button :disabled="isProcessing" @click.native="saveTags" class="btn btn-primary btn-sm">Zapisz</vue-button>
        </div>
      </div>
    </form>

    <template v-else>
      <ul v-if="tags" class="mt-3 tag-clouds cloud">
        <li v-for="tag in tags">
          <a :href="`/Forum/Tag/${ encodeURIComponent(tag.name) }`">${ tag.name }</a><small>× ${ tag.count }</small>
        </li>
      </ul>

      <div v-else class="mt-3 tag-clouds">
        <a @click="isEditing = true" href="javascript:">(Brak tagów. Kliknij, aby dodać)</a>
      </div>
    </template>
  </div>

  <div class="box mt-4">
    <h4 class="border-bottom"><i class="fas fa-tag fa-fw"></i> Popularne tagi</h4>

    {% include 'forum.partials.tags' with {'tags': tags.popular} %}
  </div>

  {% block related %}
  {% endblock %}
</aside>
