<ul id="sort" class="d-none d-sm-block mt-2">
  <li>{{ sortable('last', 'Ostatni post', ['last', 'desc']) }}</li>
  <li>{{ sortable('id', 'Data utworzenia', ['last', 'desc']) }}</li>
  <li>{{ sortable('replies', 'Odpowiedzi', ['last', 'desc']) }}</li>
  <li>{{ sortable('views', 'Wyświetleń', ['last', 'desc']) }}</li>
  <li>{{ sortable('score', 'Głosów', ['last', 'desc']) }}</li>
  {#<li class="filter"><a href="javascript:">Filtruj</a></li>#}
</ul>

{% if forum is defined and not forum.is_locked %}
  <a href="{{ route('forum.topic.submit', [forum.slug]) }}" class="btn btn-primary btn-sm float-right mt-1 mb-3">Nowy wątek</a>
{% endif %}

<div class="clearfix"></div>

<div v-for="topics in groups" class="card card-default card-topics">
  <vue-topic
    v-for="topic in topics"
    :key="topic.id"
    :topic="topic"
    :flag="getFlag(topic.id)"
    :highlight="containsUserTags(topic)"
    :posts-per-page="postsPerPage"
    :show-category-name="showCategoryName"
  ></vue-topic>
</div>

<div class="row no-gutters mb-3">
  <div class="mr-auto">
    {{ topics.render()|raw }}
  </div>

  {% if forumList is defined %}
    <div class="ml-auto">
      {{ form_select('forum', forumList, forum.slug, {'id': 'sel-forum-list', 'class': 'form-control d-inline w-auto', 'data-url': route('forum.home')}) }}

      <a class="btn" href="javascript:" id="btn-goto">
        <i class="fas fa-arrow-circle-right"></i>
      </a>
    </div>
  {% endif %}
</div>

{% if topics.count() > 10 and forum is defined and not forum.is_locked %}
  <a href="{{ route('forum.topic.submit', [forum.slug]) }}" class="btn btn-primary btn-sm float-right">Nowy wątek</a>
  <div class="clearfix"></div>
{% endif %}
