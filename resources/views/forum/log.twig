{% extends 'forum.base' %}
{% block title %}Historia edycji posta w {{ topic.subject }}{{ parent() }}{% endblock %}

{% import 'components.modals' as modal %}

{% set url = route('forum.post.log', [post.id]) %}

{% block content %}

  {% include "forum.partials.top" %}

  <h1>{{ link_to_route('forum.topic', topic.subject, [forum.slug, topic.id, topic.slug]) }}</h1>

  <main class="mainbar">
    {% for log in logs %}
      <section class="card card-post">
        <div class="card-header">
          <div class="row d-none d-lg-flex">
            <div class="col-2">
              <h5 class="mb-0 post-author">
                {% if log.user_id %}
                  {{ link_to_profile(log.user_id, log.author_name, log.is_active, log.is_blocked) }}
                {% else %}
                  {{ log.user_name }}
                {% endif %}
              </h5>
            </div>

            <div class="col-10">
              <i class="far fa-file"></i>

              <a id="id{{ log.id }}" href="{{ url }}#id{{ log.id }}">{{ log.subject }}</a>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row">
            <div class="d-none d-lg-block col-lg-2">
              <ul class="post-stats list-unstyled">
                <li>
                  <strong>Data:</strong>
                  <small>{{ log.created_at|format_date }}</small>
                </li>

                <li>
                  <strong>IP:</strong>
                  <small>{{ log.ip }}</small>
                </li>

                <li class="text-truncate">
                  <strong>Przeglądarka:</strong>
                  <small title="{{ log.browser }}">{{ log.browser }}</small>
                </li>
              </ul>
            </div>

            <div class="col-12 col-lg-10 diff">
              <div class="post-content">
                {{ log.text|raw }}
              </div>

              {% if log.tags %}
                <ul class="tag-clouds">
                  {% for tag in log.tags %}
                    <li><a href="{{ route('forum.tag', [tag|url_encode]) }}">{{ tag }}</a></li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>
        </div>

        <div class="card-footer">
          <div class="row">
            <div class="d-none d-lg-block col-lg-2"></div>
            <div class="col-12 d-flex col-lg-10">
              {% if not loop.first %}
                <a title="Cofnij do tej wersji" data-toggle="modal" data-target="#confirm" data-href="{{ route('forum.post.rollback', [post.id, log.id]) }}" class="btn btn-sm btn-rollback">
                  <i class="fas fa-undo"></i>

                  <span class="d-none d-sm-block">Cofnij do tej wersji</span>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </section>
    {% endfor %}
  </main>

  {% embed 'forum.partials.sidebar' %}
    {% block side_menu %}
      <div class="box">
        <ul class="side-menu">
          <li>
            <a id="js-btn-diff" title="Pokaż różnice w postach" href="javascript:"><i class="fa fa-project-diagram fa-fw"></i> Pokaż różnice</a>
          </li>
        </ul>
      </div>
    {% endblock %}
  {% endembed %}

  {{ form_open({'url': '', 'id': 'form-rollback'}) }}
  {{ modal.confirm('Treść postu zostanie zastąpiona. Czy chcesz kontynuować?', 'Potwierdź operację', 'confirm', 'Tak, cofnij') }}
  {{ form_close() }}

{% endblock %}

{% block body %}
  {{ parent() }}

  <script src="//cdnjs.cloudflare.com/ajax/libs/diff_match_patch/20121119/diff_match_patch.js"></script>

  <script>
    var tags = {{ tags.user|json_encode|raw }};
    var raw = {{ raw|raw }};
    var parsed = [];

    $('a[data-toggle="modal"]').click(function () {
      document.getElementById('form-rollback').setAttribute('action', this.dataset['href']);
    })

    $(function () {
      $('#js-btn-diff').click(function () {
        if (!parsed.length) {
          $('.diff').each(function (index) {
            parsed.push($(this).find('.post-content').html());

            if (index < raw.length - 1) {
              $(this).prettyTextDiff({
                originalContent: raw[index],
                changedContent: raw[index + 1],
                diffContainer: '.post-content'
              });
            }
          });
        } else {
          $('.post-content').each(function (index) {
            $(this).html(parsed[index]);
          });

          parsed = [];
        }
      });
    });
  </script>
{% endblock %}
