{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    // tymczasowo, na czas migracji do typescript
    "noImplicitAny": false,
    // vue-class-component
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "./resources/js/*"
      ]
    }
  }
}
